#!/bin/bash
set -euo pipefail
IFS=$'\n\t'

if [[ "${1:-}" == "clone" ]]; then
  case "$#" in
    3)
      REPO="$2"
      DEST="$3"
      RECURSIVE=0
      ;;
    4)
      if [[ "$2" != "--recursive" ]]; then
        echo "Unsupported git clone option." >&2
        exit 1
      fi
      REPO="$3"
      DEST="$4"
      RECURSIVE=1
      ;;
    *)
      echo "Unsupported git clone option." >&2
      exit 1
      ;;
  esac

  if [ -e "$DEST" ]; then
    echo "$DEST already exists" >&2
    exit 1
  fi

  (
    set -euo pipefail
    IFS=$'\n\t'

    flock 9

    if [ -e "$DEST" ]; then
      echo "$DEST created by other session."
      exit 0
    fi

    rm -rf "${DEST}.new"
    /usr/bin/git cclone "$REPO" "${DEST}.new"

    if [ "$RECURSIVE" -gt 0 ]; then
      (cd "${DEST}.new" && git submodule update --init --recursive)
    fi

    mv "${DEST}.new" "${DEST}"

    rm "${DEST}.lock"
  ) 9> "${DEST}.lock"
else
  exec /usr/bin/git "$@"
fi
